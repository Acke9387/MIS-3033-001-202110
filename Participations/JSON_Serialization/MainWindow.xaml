<Window x:Class="JSON_Serialization.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_Serialization"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="cboPlatforms" HorizontalAlignment="Left" Margin="75,53,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cboPlatforms_SelectionChanged"/>
        <ListBox x:Name="lstGames" Margin="388,0,0,0" Height="337" VerticalAlignment="Top" HorizontalAlignment="Left" Width="412" MouseDoubleClick="lstGames_MouseDoubleClick"/>
        <Label x:Name="lblCount" Content="Record Count : 8,000" HorizontalAlignment="Left" Margin="448,364,0,0" VerticalAlignment="Top" Width="269" FontSize="18" Height="60"/>
        <Button x:Name="btnExport" Content="Export" HorizontalAlignment="Left" Margin="148,217,0,0" VerticalAlignment="Top" Height="84" Width="108" Click="btnExport_Click"/>

    </Grid>
</Window>
